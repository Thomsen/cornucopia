<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <WebView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wv_ionvoke" >
        
    </WebView>
    
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/btn_invoke_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native invoke js" />
        
        <Button
            android:id="@+id/btn_invoke_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native invoke online" />
        
        <Button
            android:id="@+id/btn_invoke_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native invoke offline" />
                
    </LinearLayout>
    
</LinearLayout>
